# Modifica shar para incluir en el archivo el conteo de caracteres de cada archivo y
# comandos para comparar el conteo de cada archivo extraído con el conteo del
# archivo original. Si ocurre una discrepancia, se debe indicar un error, como en
#
#     add: se esperaban 345 caracteres, se extrajeron 343.

# Asegura que cada archivo exista
for file
do
    if [ ! -e "$file" ]
    then
        echo "error: archivo $file no encontrado" >&2
        exit 1
    fi
done

echo '#!/bin/bash'
echo
echo '# ``````````````````````````` #'
echo '# Para restaurar, escribe sh archivo #'
echo '# ........................... #'
echo

for file
do
    if [ -d "$file" ]
    then
        cat <<-THE-END-OF-DATA

        if [ ! -d "$file" ]
        then
            mkdir "$file"
        fi

        THE-END-OF-DATA

        # caso: subdirectorio no vacío. Llamada recursiva al programa con
        # archivos del subdirectorio
        if [ -n "$(ls -A "$file")" ]
        then
            ./exer02.sh "$file"/*
        fi
    else

        cat <<-THE-END-OF-DATA

        # caso: el archivo está en un subdirectorio. Crear el subdirectorio si
        # aún no existe.
        if [ "${file%/*}" != "$file" ]
        then
            mkdir -p "${file%/*}"
        fi

        THE-END-OF-DATA

        echo
        echo "echo Extrayendo $file"
        echo "cat > $file <<\\THE-END-OF-DATA"
        cat $file
        echo "THE-END-OF-DATA"

        # Almacena el checksum md5 del archivo archivado
        md5sum "$file" >> /tmp/shar$$
    fi
done

echo 'echo'
echo 'echo "Verificando checksums md5 de los archivos:"'
echo 'echo "----------------------------"'
echo 'md5sum -c <<\\THE-END-OF-DATA'
cat /tmp/shar$$
echo "THE-END-OF-DATA"

